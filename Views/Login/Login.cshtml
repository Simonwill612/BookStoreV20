@model Customer
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/LoginLayout.cshtml";
}
<h1>Login</h1>
@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    if (ViewBag.LoginStatus != null && ViewBag.LoginStatus == 0)
    {
        <div style="background-color: #ff0000">
            <p>
                Invalid Email or Password, please try again.
            </p>
        </div>
    }
    <div class="page-wrapper">
        <div class="prompt-container">
            @using (Html.BeginForm("ActionName", "ControllerName", FormMethod.Post))
            {
                <label for="uname"><b>Email</b></label>
                @Html.TextBoxFor(m => m.Email, new { @placeholder = "Enter Email" })

                <label for="psw"><b>Password</b></label>
                @Html.TextBoxFor(m => m.Password, new { @placeholder = "Enter Password" })

                <label>
                    <input type="checkbox" checked="checked" name="remember"> Remember me
                </label>

                <button type="submit">Sign in</button>
            }
            <div class="container" style="background-color:#f1f1f1">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Cancel</a>
                <span><a class="nav-link text-dark" asp-area="" asp-controller="CustomerRegister" asp-action="Create">Register</a></span>
            </div>
        </div>
    </div>

}