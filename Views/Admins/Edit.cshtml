@model BookStoreV10.Models.Admin

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Edit Admin </h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AdminId" />
            <div class="form-group" >
                <label asp-for="Name" class="control-label" style="margin-right:25px;"></label>
                <input asp-for="Name" class="form-control" style="border-radius:5px; />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 10px;">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" style="border-radius:5px;" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
           
            <div class="form-group" style="margin-top:5px; display:flex; justify-content: space-between; width:200px;">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" style="margin-top:3px;"><button>Back to List</button></a>
            </div>
        </form>
    </div>
</div>


